<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SoloFi.Tiles.Readers.RegularReaderTileView"
             Style="{StaticResource RampListItem}" HeightRequest="75">
  
  <StackLayout BackgroundColor="{Binding BackgroundColor}" VerticalOptions="CenterAndExpand">
    <Label Text="{Binding Item.Name}" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Style="{StaticResource RampMinorHeading}"/>
  </StackLayout>
  
</ContentView>