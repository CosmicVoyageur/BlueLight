<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SoloFi.Views.CustomerSpecific.Iluka.Parents.ExportParentView"
             Title="Export Parent"
             Style="{StaticResource IlukaContentPage}">
  <ContentPage.Resources>
    <ResourceDictionary>
      <x:Double x:Key="Width">
        150
      </x:Double>
    </ResourceDictionary>
  </ContentPage.Resources>
	<StackLayout Spacing="35">
    <Label Text="{Binding ReferenceParent.Name}" HorizontalOptions="CenterAndExpand" VerticalOptions="Start" Style="{StaticResource RampMinorHeading}" WidthRequest="{StaticResource Width}"/>
    <Entry Text="{Binding FileName}" Placeholder="File Name" HorizontalOptions="CenterAndExpand" Style="{StaticResource RampNormalEntry}" WidthRequest="{StaticResource Width}"/>
    <Button Text="Export to File" Command="{Binding FileExportCommand}" HorizontalOptions="CenterAndExpand" Style="{StaticResource IlukaButton}" WidthRequest="{StaticResource Width}"/>
  </StackLayout>
</ContentPage>