<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlueCastello.Views.Main.RGBView">
  
  <ContentPage.Resources>
    <ResourceDictionary>
      <x:Double x:Key="SliderWidth">
        200
      </x:Double>

    </ResourceDictionary>
  </ContentPage.Resources>
  <StackLayout>

      <Label Text="Red"/>
      <Slider Value="{Binding RedValue}" HorizontalOptions="CenterAndExpand" Maximum="255" Minimum="0" WidthRequest="{StaticResource SliderWidth}"/>
      <Label Text="{Binding RedValue}"/>




      <Label Text="Green"/>
      <Slider Value="{Binding GreenValue}" HorizontalOptions="CenterAndExpand" Maximum="255" Minimum="0" WidthRequest="{StaticResource SliderWidth}"/>
      <Label Text="{Binding GreenValue}" />



      <Label Text="Blue"/>
      <Slider Value="{Binding BlueValue}" HorizontalOptions="CenterAndExpand" Maximum="255" Minimum="0" WidthRequest="{StaticResource SliderWidth}"/>
      <Label Text="{Binding BlueValue}"/>
    
    
    
    <BoxView Color="{Binding ResultingColor}" WidthRequest="100" HeightRequest="100" HorizontalOptions="CenterAndExpand"/>
    
  </StackLayout>
</ContentPage>